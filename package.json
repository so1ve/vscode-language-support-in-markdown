{
	"private": true,
	"version": "0.1.1",
	"packageManager": "pnpm@8.12.0",
	"scripts": {
		"build": "nr --filter \"./packages/*\" build",
		"lint": "eslint . && prettier . --check",
		"lint:fix": "eslint . --fix && prettier . --write",
		"pack": "nr --filter=\"./packages/vscode\" pack",
		"prerelease": "nr build",
		"release": "bumpp package.json packages/*/package.json --commit --push --tag && nr --filter=\"./packages/vscode\" publish",
		"typecheck": "tsc --noEmit"
	},
	"devDependencies": {
		"@antfu/ni": "^0.21.9",
		"@so1ve/eslint-config": "1.0.0",
		"@so1ve/prettier-config": "1.0.0",
		"@types/node": "^18.18.9",
		"bumpp": "^9.2.0",
		"eslint": "^8.53.0",
		"pkgroll": "^2.0.1",
		"prettier": "^3.0.3",
		"tsup": "^7.2.0",
		"typescript": "^5.2.2"
	}
}
